<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ptp.phamtanphat.maytinhbotui0405.MainActivity">

    <TextView
        android:id="@+id/textviewTitle"
        android:textColor="#f20"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:text="May tinh bo tui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="Nhap so thu 1"
        android:id="@+id/edittextNumber1"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textviewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="Nhap so thu 2"
        android:id="@+id/edittextNumber2"
        android:layout_marginTop="30dp"
        android:layout_below="@id/edittextNumber1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="20"
        android:id="@+id/textviewResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/edittextNumber2"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/textviewResult"
        android:textSize="28sp"
        android:text="+"
        android:id="@+id/buttonCong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:padding="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/textviewResult"
        android:textSize="28sp"
        android:text="-"
        android:id="@+id/buttonTru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/buttonCong"
        android:textSize="28sp"
        android:text="*"
        android:id="@+id/buttonNhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_alignLeft="@id/buttonTru"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:layout_below="@id/buttonCong"
        android:textSize="28sp"
        android:text="/"
        android:id="@+id/buttonChia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
